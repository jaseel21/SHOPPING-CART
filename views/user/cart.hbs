<section>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Title</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td><img style="height: 70px; width: 70px;" src="/product-images/{{this.product._id}}.jpg" alt=""></td>
                    <td>{{this.product.Name}}</td>
                    <td>
                        <button class="card-item-count mr-3" onclick="chengeQuantity('{{this._id}}','{{this.product._id}}',-1)">-</button>
                        <span id="{{this.product._id}}">{{this.quantity}}</span>
                        <button class="card-item-count ml-3" onclick="chengeQuantity('{{this._id}}','{{this.product._id}}',1)">+</button>
                    </td>
                    
                    <td><a href="" class="btn btn-danger">Remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

